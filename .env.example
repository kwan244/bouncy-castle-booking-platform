# ------------------------------------------------------
# Environment Variables for Bouncy Castle Booking Platform
# Copy this file to ".env" and fill in your secrets.
# ------------------------------------------------------

# MongoDB connection string (MongoDB Atlas)
MONGO_URI=

# Stripe payment keys (for future payment integration)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=

# Email API key (e.g. Resend, SendGrid)
EMAIL_API_KEY=

# App URL (used in emails / redirects)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# When deployed to production, set:
# NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Admin login credentials (temporary until proper auth is added)
ADMIN_USERNAME=
ADMIN_PASSWORD=
